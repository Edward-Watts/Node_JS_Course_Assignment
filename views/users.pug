extends layouts/layout.pug

block styles
    link(rel="stylesheet" href="/css/user.css")

block content
    main
        if users.length > 0
            .grid
                each user in users
                    article.card.user-item
                        header.card__header
                            h1.user__title #{user.user}
                        div.card__image
                            img(src="https://www.venmond.com/demo/vendroid/img/avatar/big.jpg", alt="A User")
                        div.card__content
                            h2.user__job Software Engineer
                            p.user__description A very interesting person to learn even more interesting things!
                        .card__actions
                            button.btn Connect
        else 
            h1 No User
            